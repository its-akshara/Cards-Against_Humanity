<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerActivity">

    <TextView
        android:id="@+id/playerID"
        android:layout_width="54dp"
        android:layout_height="22dp"
        android:text="Player"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/blackCardQuestion"
        android:layout_width="320dp"
        android:layout_height="62dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:text="BlackCardQuestion"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/playerID"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blackCardQuestion"
        app:layout_optimizationLevel="standard">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="119dp">

            <TextView
                android:id="@+id/card0"
                android:layout_width="150dp"
                android:layout_height="175dp"
                android:baselineAligned="false"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/card1"
                android:layout_width="150dp"
                android:layout_height="175dp"
                android:text="TextView"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/card2"
                android:layout_width="150dp"
                android:layout_height="175dp"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/card3"
                android:layout_width="150dp"
                android:layout_height="175dp"
                android:text="TextView"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/selectACard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>