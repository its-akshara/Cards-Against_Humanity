<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JudgeActivity2"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/ucla_bg">

    <TextView
        android:id="@+id/blackQuestion"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:text="BlackCardQuestion"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="33dp"
        android:text="Select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/player1Card"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:alpha="0"
        android:background="@drawable/wc_border"
        android:padding="10dp"
        android:text="Player1Text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blackQuestion" />

    <TextView
        android:id="@+id/player2Card"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="16dp"
        android:alpha="0"
        android:background="@drawable/wc_border"
        android:padding="10dp"
        android:text="Player2Text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blackQuestion" />

    <TextView
        android:id="@+id/noCardChoosen"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginBottom="47dp"
        android:layout_marginStart="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="4dp"
        android:text="Round"
        app:layout_constraintBottom_toTopOf="@+id/blackQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>